{
  "name": "striped-skins",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:api": "npm run build --workspace ./packages/api",
    "build:viewer": "npm run build --workspace ./packages/viewer",
    "build": "vite build && vite build --ssr",
    "build:lib": "npm run build --workspace ./packages/browser-bundle",
    "dev": "vite dev --host",
    "dev:lib": "npm run dev --workspace ./packages/browser-bundle",
    "start": "remix-serve ./build/server/index.js",
    "preview:lib": "npm run preview --workspace ./packages/browser-bundle",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@remix-run/node": "^2.4.0",
    "@remix-run/react": "^2.4.0",
    "@remix-run/serve": "^2.4.0",
    "@striped-skins/api": "^1.0.0",
    "@striped-skins/viewer": "^1.0.0",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.4.0",
    "@remix-run/eslint-config": "^2.4.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.38.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-tsconfig-paths": "^4.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
